<!-- views/urls_show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Tiny App</title>
  </head>

  <body class="container">
    <header>
      <% include ./partials/_header %>
    </header>
    <main>
      <div class="jumbotron">
        <form action="/urls/<%= shortURL %>" method="POST">
          <label for="longURL">Update shortURL(<%= shortURL %>): </label>
      <input id="longURL" type="text" name="longURL" value="<%= url[shortURL] %>" placeholder="http://" style="width:300px">
      <input type="submit" value="Update">
        </form>
      </div>
    </main>
  </body>
</html>